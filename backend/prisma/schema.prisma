generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(PLAYER)
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  ORGANIZER
  PLAYER
}
